package api;

import utility.NetworkUtil;

import java.net.URISyntaxException;
import java.util.List;

import org.apache.http.client.utils.URIBuilder;

import com.google.gson.Gson;
import com.google.gson.GsonBuilder;

import model.Book;
import model.BookResponse;

public class GoogleBooksAPI {
	private final static String API_KEY = "AIzaSyCr4hc2SGelEmhfL2Wqo_dcdWZQvx9I4R4";
	private final static String BASE_URL = "https://www.googleapis.com";
	private final static String BOOK_PATH = "book";
	private final static String VERSION = "v1";
	private final static String VOLUME = "volumes";
	private final static String QUERY_PARAM = "q";
	private final static String KEY_PARAM = "key";
	
	public static List<Book> getBooksJson(String title) {
		URIBuilder builder;
		try {
			builder = new URIBuilder(BASE_URL);
			builder.setPath(BOOK_PATH);
			builder.setPath(VERSION);
			builder.setPath(VOLUME);
			builder.setParameter(QUERY_PARAM, title);
			builder.setParameter(KEY_PARAM, API_KEY);
			
			//Get response
			String data =  NetworkUtil.doRequest(builder.build()).toString();
			
			//Mapping from json to data class
			Gson gson = new GsonBuilder().create();
			BookResponse bookResponse = gson.fromJson(data,  BookResponse.class);
			
			//Experimental testing -> need to be delete soon..
			List<Book> books = bookResponse.getBooks();
			for (Book book : books) {
				System.out.println(book.getVolumeInfo().getTitle());
			}
			
			return books;
		} catch (Exception e) {
			System.out.println(e.getMessage());
			return null;
		}
		return null;
	}
	
}
